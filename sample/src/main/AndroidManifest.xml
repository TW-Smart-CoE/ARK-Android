<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thoughtworks.ark.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/sample"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">
        <activity
            android:name="com.thoughtworks.ark.sample.main.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thoughtworks.ark.sample.designsystem.ui.DesignSystemActivity"
            android:exported="true" />
        <activity
            android:name="com.thoughtworks.ark.sample.designsystem.colorsystem.ComposeColorSystemActivity"
            android:exported="true" />
        <activity
            android:name="com.thoughtworks.ark.sample.designsystem.colorsystem.XmlColorSystemActivity"
            android:exported="true" />
    </application>

</manifest>