<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- background -->
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- error -->
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/red_700</item>

        <!-- surface -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color. -->
        <item name="statusBarBackground" >?attr/backgroundColor</item>

        <!-- Customize your theme here. -->
        <item name="APPColor.BackgroundBlue">@color/light_blue_50</item>
        <item name="APPColor.BackgroundGreen">@color/light_green_200</item>

    </style>
</resources>