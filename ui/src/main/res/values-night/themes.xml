<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:textColorPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- background -->
        <item name="backgroundColor">@color/black_50</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- error -->
        <item name="colorError">@color/red_250</item>
        <item name="colorOnError">@color/black</item>

        <!-- surface -->
        <item name="colorSurface">@color/black_50</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar color. -->
        <item name="statusBarBackground">?attr/backgroundColor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="APPColor.BackgroundBlue">@color/light_blue_50</item>
        <item name="APPColor.BackgroundGreen">@color/light_green_200</item>

    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>