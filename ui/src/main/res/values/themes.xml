<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidARK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- background -->
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- error -->
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/red_700</item>

        <!-- surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar color. -->
        <item name="statusBarBackground">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="ARKColor.BackgroundBlue">@color/light_blue_300</item>
        <item name="ARKColor.BackgroundGreen">@color/light_green_700</item>

    </style>
</resources>